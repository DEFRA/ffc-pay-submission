{
  "name": "ffc-pay-submission",
  "version": "1.9.0",
  "description": "FFC payment submission service",
  "homepage": "https://github.com/DEFRA/ffc-pay-submission",
  "main": "app/index.js",
  "scripts": {
    "pretest": "npm run test:lint",
    "test": "jest --runInBand --forceExit",
    "test:watch": "jest --coverage=false --onlyChanged --watch --runInBand",
    "test:lint": "standard",
    "test:debug": "node --inspect-brk=0.0.0.0 ./node_modules/jest/bin/jest.js --coverage=false --onlyChanged --watch --runInBand --no-cache",
    "start:watch": "nodemon --inspect=0.0.0.0 --ext js --legacy-watch app/index.js",
    "start:debug": "nodemon --inspect-brk=0.0.0.0 --ext js --legacy-watch app/index.js"
  },
  "author": "Defra",
  "contributors": [
    "John Watson john.watson2@rpa.gov.uk",
    "Steve Dickinson steve.dickinson@defra.gov.uk"
  ],
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@azure/identity": "^1.3.0",
    "@azure/storage-blob": "^12.8.0",
    "@fast-csv/format": "^4.3.5",
    "applicationinsights": "^1.8.2",
    "ffc-messaging": "^2.4.1",
    "ffc-pay-event-publisher": "1.0.0",
    "joi": "^17.4.2",
    "log-timestamp": "^0.3.0",
    "moment": "^2.29.1",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.6.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "jest": "^27.0.6",
    "jest-junit": "^13.0.0",
    "nodemon": "^2.0.12",
    "standard": "^16.0.3"
  },
  "standard": {
    "globals": [
      "describe",
      "beforeEach",
      "expect",
      "test",
      "afterEach",
      "jest",
      "beforeAll",
      "afterAll"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/test-output/**"
    ]
  }
}
